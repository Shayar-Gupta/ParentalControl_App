<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradiant"
    android:orientation="vertical"
    tools:context=".activity.SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start">

        <ImageButton
            android:id="@+id/back_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="136dp"
            android:layout_toStartOf="@+id/setting_image"
            android:src="@drawable/baseline_arrow_back"
            android:background="@null" />


        <ImageView
            android:id="@+id/btnSettings"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_settings" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical"
                android:background="@drawable/round_back_setting"
                android:padding="5dp">

                <!--Logout button-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/logout_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/logout_24" />

                    <Button
                        android:id="@+id/btnLogout"
                        style="@style/ButtonSettings"
                        android:text="@string/logout"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/logout_image"
                        android:textStyle="bold"/>

                </RelativeLayout>

                <!--Change Password button-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/change_password_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/change_password_33" />

                    <Button
                        android:id="@+id/btnChangePassword"
                        style="@style/ButtonSettings"
                        android:text="@string/change_password"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/change_password_image"/>

                </RelativeLayout>

                <!--Delete Account button-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/delete_account_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_delete_darkest_blue" />

                    <Button
                        android:id="@+id/btnDeleteAccount"
                        style="@style/ButtonSettings"
                        android:text="@string/delete_account"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/delete_account_image"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical"
                android:background="@drawable/round_back_setting"
                android:padding="5dp">

                <!--About Us button-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/about_us_image"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/contact_us" />

                    <Button
                        android:id="@+id/btnAbout"
                        style="@style/ButtonSettings"
                        android:text="@string/about"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/about_us_image"
                        android:textStyle="bold"/>
                </RelativeLayout>

                <!--Report a bug-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/report_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/baseline_bug_report_24" />

                    <Button
                        android:id="@+id/btnSendFeedBack"
                        style="@style/ButtonSettings"
                        android:text="@string/send_feedback"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/report_image"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>