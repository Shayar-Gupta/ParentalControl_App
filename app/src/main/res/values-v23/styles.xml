<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardTextBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/app_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:thumbTint">@drawable/switch_thumb_track_color</item>
        <item name="android:trackTint">@drawable/switch_thumb_track_color</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>