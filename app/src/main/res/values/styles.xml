<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OkButton">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MainEditText">
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/margin_8dp</item>
        <item name="android:background">@drawable/edit_text_rounded</item>
        <item name="android:drawablePadding">@dimen/padding_8dp</item>
        <item name="android:padding">@dimen/padding_8dp</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="TextViewNoElements">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="TextViewSettingsHeader">
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_32dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonSettings">
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textColor">@color/darkest_blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/padding_32dp</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <!--Dialog fragments styles-->
    <style name="DialogFragmentImage">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_gravity">center_horizontal|top</item>
    </style>

    <style name="DialogFragmentBody">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin_48dp</item>
        <item name="android:layout_marginStart">@dimen/margin_32dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_32dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_16dp</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="DialogFragmentEditText">
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/margin_32dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_32dp</item>
        <item name="android:layout_marginTop">@dimen/margin_24dp</item>
        <item name="android:background">@drawable/edit_text_rounded</item>
        <item name="android:drawablePadding">@dimen/padding_8dp</item>
        <item name="android:padding">@dimen/padding_8dp</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="DialogFragmentButtonOk">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:text">@string/ok</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="DialogFragmentButtonCancel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:text">@string/cancel</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <!--End of dialog fragments styles-->

    <style name="TextViewPermissions">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/darkest_blue</item>
    </style>

</resources>